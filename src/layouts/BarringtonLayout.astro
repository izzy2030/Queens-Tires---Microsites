---
import BarringtonHeader from '../components/BarringtonHeader.astro';
import BarringtonFooter from '../components/BarringtonFooter.astro';
import '../assets/css/input.css';

interface Props {
	title: string;
    description?: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta content="width=device-width, initial-scale=1.0" name="viewport" />
        <meta name="description" content={description || "Top-rated mobile tire service in Barrington, IL."} />
		<link rel="icon" href="/assets/images/favicon.ico" type="image/x-icon" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
        
        <!-- Chat Widget Embed Code -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/geist-font/1.0.0/fonts/geist-sans/style.min.css">
        <!-- Script moved to dynamic loader -->
        <!-- End Chat Widget Embed Code -->
	</head>
	<body class="font-sans bg-surface-light text-brand-dark antialiased selection:bg-accent selection:text-brand-dark">
		<div class="min-h-screen flex flex-col">
			<BarringtonHeader />
			<main class="flex-grow">
				<slot />
			</main>
			<BarringtonFooter />
		</div>

        <!-- Custom Chat Trigger -->
        <button id="custom-chat-trigger" class="fixed bottom-6 right-6 z-40 bg-brand-dark text-white px-6 py-3 rounded-full shadow-xl flex items-center gap-2 hover:bg-brand-light transition-all transform hover:-translate-y-1 group">
            <span class="material-symbols-outlined group-hover:animate-bounce">chat</span>
            <span class="font-bold">Live Chat</span>
        </button>

        <script>
            // Logic to hide chat widget when tire connect is visible
            let chatWidgetContainer;
            let widgetLoaded = false;
            const customTrigger = document.getElementById('custom-chat-trigger');

            // Load Widget Function
            function loadWidget() {
                if (widgetLoaded) return;
                
                const script = document.createElement('script');
                script.src = "https://widget.queensautoserviceselgin.com/widget.js";
                script.defer = true;
                document.body.appendChild(script);
                
                widgetLoaded = true;
                if (customTrigger) customTrigger.style.display = 'none';
            }

            // Bind click event
            if (customTrigger) {
                customTrigger.addEventListener('click', loadWidget);
            }

            // Helper to find the widget using heuristics
            function findWidget() {
                // 1. Try specific selectors first (if known)
                const specific = document.querySelector('iframe[src*="queensautoserviceselgin"]') || 
                                 document.querySelector('iframe[src*="leads.queensautoservices"]');
                if (specific) {
                    // Find the fixed parent
                    let el = specific;
                    while (el && el.parentElement && el.parentElement !== document.body) {
                        const style = window.getComputedStyle(el);
                        if (style.position === 'fixed') return el;
                        el = el.parentElement;
                    }
                    return specific;
                }

                // 2. Heuristic: Find fixed element in bottom-right with high z-index
                const allElements = document.querySelectorAll('body > div, body > iframe, body > button');
                for (let el of allElements) {
                    // Skip our own elements
                    if (el.id === 'barrington-mobile-menu' || el.id === 'main-header' || el.id === 'custom-chat-trigger') continue;

                    const style = window.getComputedStyle(el);
                    const bottom = parseInt(style.bottom);
                    const right = parseInt(style.right);
                    const zIndex = parseInt(style.zIndex);

                    if (style.position === 'fixed' && 
                        !isNaN(bottom) && bottom < 150 && 
                        !isNaN(right) && right < 150 &&
                        !isNaN(zIndex) && zIndex > 50 &&
                        style.display !== 'none' &&
                        style.visibility !== 'hidden') {
                        return el;
                    }
                }
                return null;
            }

            // Intersection Observer
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    // Always try to find/refresh the widget reference if loaded
                    if (widgetLoaded && (!chatWidgetContainer || !document.body.contains(chatWidgetContainer))) {
                        chatWidgetContainer = findWidget();
                    }
                    
                    if (entry.isIntersecting) {
                        // Hide Custom Trigger
                        if (customTrigger) {
                            customTrigger.style.opacity = '0';
                            customTrigger.style.pointerEvents = 'none';
                        }
                        // Hide Real Widget
                        if (chatWidgetContainer) {
                            chatWidgetContainer.style.transition = 'opacity 0.3s, visibility 0.3s';
                            chatWidgetContainer.style.opacity = '0';
                            chatWidgetContainer.style.visibility = 'hidden';
                            chatWidgetContainer.style.pointerEvents = 'none';
                        }
                    } else {
                        // Show Custom Trigger (only if widget not loaded)
                        if (customTrigger && !widgetLoaded) {
                            customTrigger.style.opacity = '1';
                            customTrigger.style.pointerEvents = 'auto';
                        }
                        // Show Real Widget (only if loaded)
                        if (chatWidgetContainer) {
                            chatWidgetContainer.style.opacity = '1';
                            chatWidgetContainer.style.visibility = 'visible';
                            chatWidgetContainer.style.pointerEvents = 'auto';
                        }
                    }
                });
            }, { threshold: 0.05 });

            // Start observing
            const tireConnect = document.getElementById('tireconnect');
            if (tireConnect) {
                observer.observe(tireConnect.parentElement || tireConnect);
            }
            
            // Periodically check for the widget if loaded
            setInterval(() => {
                if (widgetLoaded) {
                    const widget = findWidget();
                    if (widget && widget !== chatWidgetContainer) {
                        chatWidgetContainer = widget;
                    }
                }
            }, 1000);
        </script>
	</body>
</html>
