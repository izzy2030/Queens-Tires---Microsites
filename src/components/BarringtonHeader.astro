<!-- Mobile Menu Overlay -->
<div id="barrington-mobile-menu" class="fixed inset-0 z-40 bg-white transform translate-x-full transition-transform duration-300 ease-in-out flex flex-col pt-24 px-6">
    <button id="barrington-close-menu-btn" class="absolute top-6 right-4 p-2 text-slate-600">
        <span class="material-symbols-outlined text-3xl">close</span>
    </button>
    <nav class="flex flex-col gap-6 text-lg font-medium text-slate-800">
        <a href="/barrington" class="border-b border-slate-100 pb-4">Home</a>
        <a href="/barrington/flat-tire-repair" class="border-b border-slate-100 pb-4">Flat Repair</a>
        <a href="/barrington/new-tires-installed" class="border-b border-slate-100 pb-4">New Tires</a>
        <a href="/barrington/24-hour-mobile-tire-shop" class="border-b border-slate-100 pb-4">24/7 Service</a>
        <div class="mt-4">
            <a href="tel:8475558473" class="block w-full bg-barrington-primary text-white text-center py-3 rounded-lg font-bold">Call (847) 555-8473</a>
        </div>
    </nav>
</div>

<script>
    const menuBtn = document.getElementById('barrington-menu-btn');
    const mobileMenu = document.getElementById('barrington-mobile-menu');
    const closeMenuBtn = document.getElementById('barrington-close-menu-btn');
    let isMenuOpen = false;

    function toggleMenu() {
        isMenuOpen = !isMenuOpen;
        if (isMenuOpen) {
            mobileMenu?.classList.remove('translate-x-full');
            document.body.style.overflow = 'hidden';
        } else {
            mobileMenu?.classList.add('translate-x-full');
            document.body.style.overflow = '';
        }
    }

    menuBtn?.addEventListener('click', toggleMenu);
    closeMenuBtn?.addEventListener('click', toggleMenu);
</script>
