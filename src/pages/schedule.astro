---
import Layout from '../layouts/BarringtonLayout.astro';
---

<Layout title="Schedule Installation | Barrington Mobile Tire Pros" description="Book your mobile tire installation appointment in Barrington. Choose a time and location that works for you.">
    <!-- Hero Section -->
    <section class="pt-32 pb-12 md:pt-40 md:pb-20 bg-surface-light">
        <div class="max-w-7xl mx-auto px-4">
            <h1 class="text-5xl md:text-6xl font-display font-bold text-brand-dark mb-6 tracking-tight">Schedule <br class="hidden md:block" /> Your Service.</h1>
            <p class="text-xl md:text-2xl text-slate-500 max-w-3xl font-light leading-relaxed">Choose a time. We'll be there. <br class="hidden md:block" /> It's that simple.</p>
        </div>
    </section>

    <!-- Booking Section -->
    <section class="py-16 md:py-24">
        <div class="max-w-4xl mx-auto px-4">
            <div class="bg-white rounded-3xl shadow-lg border border-slate-100 overflow-hidden min-h-[600px] flex items-center justify-center relative">
                <!-- Placeholder for Booking Widget -->
                <div class="text-center p-8">
                    <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4 text-slate-400">
                        <span class="material-symbols-outlined text-3xl">calendar_month</span>
                    </div>
                    <h3 class="text-xl font-bold text-brand-dark mb-2">Booking System Loading...</h3>
                    <p class="text-slate-500 mb-6">Please wait while we load available appointments.</p>
                    <div class="animate-pulse w-48 h-2 bg-slate-200 rounded-full mx-auto"></div>
                </div>
                
                <!-- Actual Embed Code would go here -->
                <!-- <iframe src="https://calendly.com/..." width="100%" height="100%" frameborder="0"></iframe> -->
            </div>

            <div class="mt-12 text-center">
                <p class="text-slate-600">Prefer to book by phone? Call us at <a href="tel:8475558473" class="text-brand-dark font-bold hover:underline">(847) 555-8473</a></p>
            </div>
        </div>
    </section>
</Layout>
